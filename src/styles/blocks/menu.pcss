.menu__list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.menu__item {
  cursor: pointer;
  border: 3px solid transparent;
  margin-right: 30px;

  &:last-child {
    margin-right: 0;
  }

  &.active {
    border-bottom: 3px solid $hover-color;
    transition: $speed;
  }

  &:hover {
    .menu__link {
      color: $hover-color;
      transition: $speed;
    }
  }
}

.menu__link {
  color: $links-color;
}