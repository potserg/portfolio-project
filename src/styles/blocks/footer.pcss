.footer {
  width: 100%;
  height: 410px;
  background-color: $about-color;
  position: relative;
  &:before {
    content: "";
    display: block;
    width: 1200px;
    height: 900px;
    background-image: url(~images/content/drums.png);
    background-size: cover;
    background-repeat: no-repeat;
    position: absolute;
    bottom: 100%;
    left: 55%;
    z-index: 90;
  }
}