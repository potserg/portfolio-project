.socials--footer {
  .socials__item {
    border: 2px solid $icons-color;
    border-radius: 50%;
  }
}

.socials__list {
  display: flex;
  justify-content: center;
}

.socials__item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  margin-left: 30px;
  &:first-child {
    margin-left: 0;
  }
}

.socials__link {
  width: 30px;
  height: 30px;
}

.socials__icon {
  width: 30px;
  height: 30px;
  fill: $icons-color;
}