.header {
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  height: 150px;
  width: 100%;
  z-index: 15;
}

.header__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.header__logo {
  font-size: 36px;
  font-weight: 800;
}

.header__menu {
  margin: 0 90px;
  display: flex;
  align-items: center;

  @include tablets {
    display: none;
  }
}

.header__socials_ham-menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  
  @include tablets {
    width: 50%;
    justify-content: center;
  }

}

.header__ham-menu {
  display: none;
  width: 40px;
  height: 40px;
  margin-left: 90px;
  
  &_btn {
    &:hover {
      .header__ham-menu_icon {
        stroke: $hover-color;
        transition: $speed;
      }
    }
  }
  
  &_icon {
    stroke-width: 5px;
    stroke: $links-color;
    width: 40px;
    height: 40px;
  }
  
  @include tablets {
    display: block;
    margin-left: 50px;
  }
}